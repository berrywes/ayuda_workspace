<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:backgroundTint="@color/colorAccent"
            android:padding="15dp">

            <TextView
                android:id="@+id/locationTextView"
                android:layout_width="430dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:width="400dp"
                android:fontFamily="sans-serif-light"
                android:maxWidth="400dp"
                android:text="Location"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                android:textColor="@color/zxing_status_text"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.492" />

            <TextView
                android:id="@+id/availabilityTextView"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="220dp"
                android:fontFamily="sans-serif-light"
                android:text="Status"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                android:textColor="@color/zxing_status_text"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/locationTextView"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/editLocationButton"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginStart="40dp"
                android:background="@drawable/button_grey"
                android:fontFamily="sans-serif-light"
                android:text="edit"
                android:textColor="@color/zxing_status_text"
                android:textSize="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/availabilityTextView"
                app:layout_constraintStart_toEndOf="@+id/availabilityTextView"
                app:layout_constraintTop_toTopOf="@+id/availabilityTextView"
                app:layout_constraintVertical_bias="0.541" />

            <Button
                android:id="@+id/saveLocationButton"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="225dp"
                android:layout_height="50dp"
                android:layout_marginStart="36dp"
                android:background="@drawable/button_green"
                android:fontFamily="sans-serif-light"
                android:text="Save Location"
                android:textColor="@color/zxing_status_text"
                android:textSize="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/editLocationButton"
                app:layout_constraintStart_toEndOf="@+id/editLocationButton"
                app:layout_constraintTop_toTopOf="@+id/editLocationButton"
                app:layout_constraintVertical_bias="1.0" />


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>